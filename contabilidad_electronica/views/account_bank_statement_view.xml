<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record model="ir.ui.view" id="view_bank_statement_form_inherit">
            <field name="name">account.bank.statement.form</field>
            <field name="model">account.bank.statement</field>
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="arch" type="xml">
                <field name="bank_account_id" position="before">
                    <field name="ttype" />
                    <field name="cta_destino" 
                            attrs="{'readonly': ['|',('ttype','=',False),('ttype','!=','trans')], 'required': [('ttype','=','trans')]}"/>
                    <field name="cta_origen" 
                            attrs="{'readonly': ['|',('ttype','=',False),('ttype','=','otro')], 'required': [('ttype','in',('cheque','trans'))]}"/>
                    <field name="num_cheque" 
                            attrs="{'readonly': ['|',('ttype','=',False),('ttype','!=','cheque')],  'required': [('ttype','=','cheque')]}" />
                    <field name="benef" 
                            attrs="{'readonly': ['|',('ttype','=',False),('ttype','=','trans')], 'required': [('ttype', 'in', ('cheque','otro'))]}"/>
                    <field name="metodo_pago" 
                            attrs="{'readonly': ['|',('ttype','=',False),('ttype','!=','otro')], 'required': [('ttype','=','otro')]}"/>
                </field>
            </field>
        </record>

    </data>
</openerp>