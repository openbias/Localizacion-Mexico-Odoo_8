<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_vendor_receipt_dialog_pagos_form" model="ir.ui.view">
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_dialog_form" />
            <field name="name">view_vendor_receipt_dialog_pagos_form</field>
            <field name="model">account.voucher</field>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="hide_formapago_id" invisible="1" />
                    <field name="formapago_id"
                        attrs="{
                            'invisible': [('hide_formapago_id', '=', True)], 
                            'required': [('hide_formapago_id', '=', False)]
                        }"/>
                </field>
            </field>
        </record>
        <record id="view_vendor_receipt_pagos_form" model="ir.ui.view">
            <field name="inherit_id" ref="account_voucher.view_vendor_receipt_form"/>
            <field name="name">view_vendor_receipt_pagos_form</field>
            <field name="model">account.voucher</field>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="hide_formapago_id" invisible="1" />
                    <field name="formapago_id"
                        attrs="{
                            'invisible': [('hide_formapago_id', '=', True)], 
                            'required': [('hide_formapago_id', '=', False)]
                        }"/>
                </field>
            </field>
        </record>
        <record id="view_vendor_payment_pagos_form" model="ir.ui.view">
            <field name="inherit_id" ref="account_voucher.view_vendor_payment_form"/>
            <field name="name">view_vendor_payment_pagos_form</field>
            <field name="model">account.voucher</field>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="formapago_id" invisible="0" required="1" />
                </field>
            </field>
        </record>


        <record id="view_bank_statement_cp_form" model="ir.ui.view">
            <field name="inherit_id" ref="account.view_bank_statement_form"/>
            <field name="name">view_bank_statement_cp_form</field>
            <field name="model">account.bank.statement</field>
            <field name="arch" type="xml">
                <field name="journal_id" position="after">
                    <field name="hide_formapago_id" invisible="1" />
                    <field name="formapago_id"
                        attrs="{
                            'invisible': [('hide_formapago_id', '=', True)], 
                            'required': [('hide_formapago_id', '=', False)]
                        }"/>
                </field>
            </field>
        </record>


        


        <record id="view_move_line_pagos_form" model="ir.ui.view">
            <field name="name">view_move_line_pagos_form</field>
            <field name="model">account.move.line</field>
            <field name="inherit_id" ref="account.view_move_line_form"/>
            <field name="arch" type="xml">
                <notebook position="inside">
                    <page string="Info. SAT">
                        <group>
                            <field name="tipo_comprobante" readonly="0" />
                            <!-- <field name="tipo_cambio" readonly="1"/> -->
                            <field name="uuid" readonly="1"/>
                            <field name="noCertificado" readonly="1" />
                            <field name="sello_sat" readonly="1"/>
                            <field name="certificado_sat" readonly="1"/>
                            <field name="fecha_timbrado" readonly="1"/>
                            <field name="cadena_sat" readonly="1"/>
                            <field name="test" readonly="1"/>
                        </group>
                    </page>
                </notebook>
            </field>
        </record>

        <record model="ir.ui.view" id="invoice_cfdi_pagos_form">
            <field name="name">invoice_cfdi_pagos_form</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="cfd_mx.invoice_cfdi_form"/>
            <field name="arch" type="xml">
                <group name="timbre_cfdi_cancelar" position="after">
                    <group colspan="4">
                        <h1 class="mt0">Pagos CFDI</h1>
                    </group>
                    <group colspan="4">
                        <field name="payment_ids" nolabel="1" colspan="4">
                            <tree string="Payments">
                                <field name="date"/>
                                <field name="move_id"/>
                                <field name="uuid"/>
                                <field name="ref"/>
                                <field name="name"/>
                                <field name="journal_id" groups="base.group_user"/>
                                <field name="debit" sum="Debit" />
                                <field name="credit" sum="Credit" />
                                <field name="amount_currency" sum="Currency" groups="base.group_multi_currency"/>
                                <field name="currency_id" groups="base.group_multi_currency"/>
                                <button name="get_xml" type="object" string="XML" class="oe_highlight"/>
                                <button name="get_pdf" string="PDF" class="oe_highlight"/>
                            </tree>
                        </field>
                    </group>
                </group>
            </field>
        </record>



    </data>
</openerp>